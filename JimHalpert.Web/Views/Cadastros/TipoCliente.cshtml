@using JimHalpert.App.ViewModel
@model ModelViewItem<List<TipoDeClienteViewModel>>

@{
    ViewData["Title"] = "Tipo de Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="text-center">
        <h3 class="display-4">Tipo de Cliente</h3>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="text-end">
                <button type="button" class="btn btn-success" onclick="TipoDePessoa.Novo();"><i class="fa fa-file"></i>&nbsp;Novo</button>
            </div>
        </div>
    </div>
    <br />
    <div class="d-none d-sm-block">
        <div class="table-responsive" style="overflow: visible;">
            <table class="table table-striped table-hover table-lg" data-item-reload="true" id="tableDados">
                <thead class="table-primary">
                    <tr>
                        <th scope="col" style="width:10%">#</th>
                        <th scope="col" style="width:70%">Descrição</th>
                        <th scope="col" class="text-right" style="width:20%">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Item)
                    {
                        <tr>
                            <th scope="row">@item.TipoDeClienteId</th>
                            <td>@item.Descricao</td>
                            <td class="text-right">
                                <button type="button" class="btn btn-success" onclick="TipoDePessoa.Edit('@item.TipoDeClienteId', '@item.Descricao')"><i class="fa fa-pencil"></i></button>
                                <button type="button" class="btn btn-danger" onclick="TipoDePessoa.Excluir('@item.TipoDeClienteId')"><i class="fa fa-trash-o"></i></button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

    <div class="d-block d-sm-none">
        <div class="container">
            @foreach (var item in Model.Item)
            {
                <div class="card border-1">
                    <div class="card-header bg-secondary">
                        <h5 class="card-title">Tipo de Cliente Id: @item.TipoDeClienteId</h5>
                    </div>
                    <div class="card-body bg-secondary">
                        <div class="row">
                            <div class="col-1">&nbsp;</div>
                            <div class="col-8">
                                <p class="fs-5">
                                    <b>Descrição: </b>@item.Descricao
                                </p>
                            </div>
                            <div class="col-1">
                                <button type="button" class="btn btn-success" onclick="TipoDePessoa.Edit('@item.TipoDeClienteId', '@item.Descricao')"><i class="fa fa-pencil"></i></button>
                            </div>
                            <div class="col-1">
                                <button type="button" class="btn btn-danger" onclick="TipoDePessoa.Excluir('@item.TipoDeClienteId')"><i class="fa fa-trash"></i></button>
                            </div>
                            <div class="col-1">&nbsp;</div>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>
